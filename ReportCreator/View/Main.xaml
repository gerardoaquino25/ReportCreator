<UserControl x:Class="ReportCreator.View.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid>
        <Border Style="{StaticResource CentroStyle}">
            <StackPanel>
                <DockPanel Style="{StaticResource FormDP}">
                    <Button Style="{StaticResource LongB}" Content="Envio de informe" Click="EnvioInforme_Click" />
                </DockPanel>
                <DockPanel Style="{StaticResource FormDP}">
                    <Button Style="{StaticResource LongB}" Content="Opciones" Click="Opciones_Click"/>
                </DockPanel>
                <DockPanel Style="{StaticResource FormDP}">
                    <Button Style="{StaticResource LongB}" Content="Cerrar Sesión" Click="CerrarSesion"/>
                </DockPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
