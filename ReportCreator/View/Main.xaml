<UserControl x:Class="ReportCreator.View.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Border Padding="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,0,0,10"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Envio de informe" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Click="EnvioInformeClick" Margin="0,0,0,5"/>
            <Button Content="Opciones" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Click="OpcionesClick" Margin="0,0,0,5"/>
            <Button Content="Cerrar Sesión" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Margin="0,0,0,0" Click="CerrarSesion"/>
        </StackPanel>
    </Border>
</UserControl>
