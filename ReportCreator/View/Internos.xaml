<UserControl x:Class="ReportCreator.View.Internos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300" Height="305">
    <Grid Height="300">
        <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="False" Name="InternosDG" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="247" Width="280">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=nombre}" Header="Nombre" MinWidth="50" />
                <DataGridTextColumn Binding="{Binding Path=circulo}" Header="Círculo" MinWidth="100" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Guardar" HorizontalAlignment="Left" Margin="135,271,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Volver" HorizontalAlignment="Left" Margin="215,271,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
    </Grid>
</UserControl>
